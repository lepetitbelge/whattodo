<div class="navbar navbar-expand-sm navbar-light navbar">
  <%= link_to "/", class: "navbar-brand" do %>
    <%= image_tag "https://res.cloudinary.com/lepetitbelge/image/upload/v1554815137/bug-logo.jpg" %>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if current_user %>
        <li class="nav-item">
          <%= link_to "Log out", "/users/sign_out", method: :delete, class: "nav-link" %>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Sign up", "/users/sign_up", class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Log in", "/users/sign_in", class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
