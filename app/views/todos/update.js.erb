function updateTodo() {
  const originalTodo = document.querySelector("#todo-<%= @todo.id %>");
  originalTodo.insertAdjacentHTML('afterend', "<%= j render partial: "todo", locals: { todo: @todo} %>");
  originalTodo.remove();

  const updatedTodo = document.querySelector("#todo-<%= @todo.id %>");

  if (originalTodo.classList.value.includes("todo-done")) {
    updatedTodo.classList.remove('todo-done');
  } else {
    updatedTodo.classList.add('todo-done');
  };
};

updateTodo();
