<h1>My Todos</h1>

<%= form_for Todo.new do |f| %>
  <%= f.hidden_field :user_id, :value => current_user.id %>

  <div class="form-group">
    <label for="form-task-text">Task</label>
    <%= f.text_field :task, placeholder: "What to do?", class: "form-control", id: "form-task-text" %>
  </div>
  <div class="form-group">
    <label for="form-priority-select">Priority</label>
    <%= f.select(:priority, ['(1) Very high', '(2) High', '(3) Medium', '(4) Low', '(5) Very Low'], {}, { :class => 'form-control', :id => 'form-priority-select' }) %>
  </div>
  <div class="form-group">
    <!-- <label for="form-date-select">Date</label> -->
    <%= f.date_select :deadline, :ampm => true, :id => 'form-date-select' %>
  </div>
  <div class="form-group">
  <%= f.submit "Create", class: "btn btn-primary" %>
  </div>
<% end %>

<ul>
<% @todos.each do |todo| %>
  <li>
    <%= todo.task %><br>
    <%= check_box_tag 'done', '', todo.done %><br>
    <strong>priority: </strong><%= todo.priority %><br>
    <strong>deadline: </strong><%= todo.deadline %><br>
    <strong>done: </strong><%= todo.done? ? "Done" : "Not done" %><br>
    <%= link_to "Delete", todo_path(todo), method: 'delete' %>
    <%= link_to "Done", todo_path(todo), method: 'patch' %>
  </li>
<% end %>
</ul>
